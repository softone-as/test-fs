{
    "collection": "@nestjs/schematics",
    "monorepo": true,
    "projects": {
        "backoffice": {
            "type": "application",
            "root": "apps/backoffice",
            "entryFile": "main",
            "sourceRoot": "apps/backoffice/src",
            "compilerOptions": {
                "assets": [
                    {
                        "include": "../public",
                        "outDir": "./dist/apps/backoffice/public",
                        "watchAssets": true
                    },
                    {
                        "include": "../assets",
                        "outDir": "./dist/apps/backoffice/assets",
                        "watchAssets": true
                    },
                    {
                        "include": "./infrastructure/mail/templates/**/*",
                        "outDir": "./dist/apps/backoffice/src",
                        "watchAssets": true
                    }
                ],
                "watchAssets": true,
                "tsConfigPath": "apps/backoffice/tsconfig.app.json"
            }
        },
        "api": {
            "type": "application",
            "root": "apps/api",
            "entryFile": "main",
            "sourceRoot": "apps/api/src",
            "compilerOptions": {
                "assets": [
                    {
                        "include": "../public",
                        "outDir": "./dist/apps/api/public",
                        "watchAssets": true
                    },
                    {
                        "include": "../assets",
                        "outDir": "./dist/apps/api/assets",
                        "watchAssets": true
                    }
                ],
                "watchAssets": true,
                "tsConfigPath": "apps/api/tsconfig.app.json"
            }
        }
    }
}
